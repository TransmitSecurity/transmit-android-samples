<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <ImageView
        android:id="@+id/transmit_logo"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transmit_main_logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|top"
        android:lineHeight="29.05dp"
        android:text="@string/title"
        android:textAppearance="@style/title"
        android:textFontWeight="600"
        android:fontFamily="@font/inter"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transmit_logo" />

    <TextView
        android:id="@+id/description"
        android:layout_width="323dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter"
        android:gravity="center_horizontal|top"
        android:text="@string/description"
        android:textAppearance="@style/description"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="277dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:text="@string/instruction1"
        android:textAppearance="@style/text"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="256dp"
        android:layout_height="19dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:text="@string/instruction2"
        android:textAppearance="@style/text"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="279dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:text="@string/instruction3"
        android:textAppearance="@style/text"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="256dp"
        android:layout_height="19dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:text="@string/instruction4"
        android:textAppearance="@style/text"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text3"
        app:layout_constraintTop_toBottomOf="@+id/text3" />

    <ImageView
        android:id="@+id/document_image"
        android:layout_width="28dp"
        android:layout_height="18.67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:viewportWidth="28"
        android:viewportHeight="17.11"
        app:layout_constraintBottom_toBottomOf="@+id/text1"
        app:layout_constraintEnd_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/text1"
        app:srcCompat="@drawable/document" />

    <ImageView
        android:id="@+id/calendar_image"
        android:layout_width="27.7dp"
        android:layout_height="24.63dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintEnd_toStartOf="@+id/text2"
        app:layout_constraintTop_toTopOf="@+id/text2"
        app:srcCompat="@drawable/calendar" />

    <ImageView
        android:id="@+id/to_do_list_image"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/text3"
        app:layout_constraintEnd_toStartOf="@+id/text3"
        app:layout_constraintTop_toTopOf="@+id/text3"
        app:srcCompat="@drawable/to_do_list" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/text4"
        app:layout_constraintEnd_toStartOf="@+id/text4"
        app:layout_constraintTop_toTopOf="@+id/text4"
        app:srcCompat="@drawable/face" />

    <ImageView
        android:id="@+id/line_image"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text4"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="256dp"
        android:layout_height="36dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:text="@string/agreement"
        android:textAppearance="@style/text"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text4"
        app:layout_constraintTop_toBottomOf="@+id/line_image"
        android:textColorLink="#4597FF"/>


    <Button
        android:id="@+id/Start_SDK"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="100dp"
        android:text="@string/Start_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:shadowColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text5"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/text5"
        android:buttonTint="#4597FF"
        />


</androidx.constraintlayout.widget.ConstraintLayout>